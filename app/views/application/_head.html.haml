    %meta{ :charset => "utf-8" }
    -# More info: h5bp.com/b/378
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    -# Mobile viewport optimized: h5bp.com/viewport
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0" }
    %meta{ :name => "apple-mobile-web-app-capable", :content => "yes" }

    %meta{property: "og:title", content: "{{app.meta.title}}"}
    %meta{property: "og:type", content: "{{app.meta.type}}"}
    %meta{property: "og:image", content: "{{app.meta.imageUrl}}"}
    %meta{property: "og:url", content: "{{app.meta.url}}"}
    %meta{property: "og:site_name", content: "Positive Space"}
    %meta{property: "og:description", content: "{{app.meta.description}}"}

    %meta{ :name => "description", :content => "{{app.meta.description}}" }
    %meta{ :name => "keywords", :content => "{{app.meta.keywords}}" }
    %title{ "ng-bind" => "app.currentUser.ready_conversations_count > 0 && '('+app.currentUser.ready_conversations_count+') ' + app.meta.title || app.meta.title" } Positive Space - Simply Converse

    = render "stylesheets"

    = csrf_meta_tag
    %meta#csrf{"data-csrf" => form_authenticity_token, "ng-controller" => "CsrfCtrl"}

    -# Disable Caching
    -#%meta{:content => "no-cache", "http-equiv" => "cache-control"}/
    -#%meta{:content => "0", "http-equiv" => "expires"}/
    -#%meta{:content => "no-cache", "http-equiv" => "pragma"}/

    = yield :head

    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
