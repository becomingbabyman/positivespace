- html_tag "ng-app" => "ps", "ng-controller" => "AppCtrl", :class => "no-js", :lang => "en", :"xmlns:fb" => "http://ogp.me/ns/fb#" do
	= render "head"

	%body{ "ng-class" => "{focus: app.show.focus}" }

		#wrapper
			#loading{"ng-include" => "app.templates.loading.url"}
				= image_tag "ps_logo@2x.png", style: "width: 100px; height: 64px; margin: 20px;"
				= image_tag 'loading.gif', style: "width: 30px; position: absolute; top: 46px; left: 81px;"
			%header#header{"ng-class" => "app.templates.header.classes", "ng-include" => "app.templates.header.url"}
			#main{ :role => "main" }
				#help{"ng-include" => "app.templates.help.url"}
				#flash{"ng-include" => "app.templates.flash.url"}
				#yielded{"ng-view"=>true}


			#layout_footer
		%footer#footer{"ng-include" => "app.templates.footer.url"}
		= render "javascripts"
		= render "facebook"
