.container-fluid
  .content
    .page-header
      %h1 Change your password?
    .row-fluid
      .span8
        = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f| 
          = f.input :reset_password_token, as: :hidden
          = f.input :password, label: "New password"
          = f.input :password_confirmation, label: "Confirm new password"
          .form-actions
            = f.button :submit, :value => I18n.t('helpers.submit.user.password.update'), :class => 'btn-inverse'
      .span4
        = render :partial => "devise/shared/links"