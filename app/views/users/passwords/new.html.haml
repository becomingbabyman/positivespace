.container-fluid
	.content
		.page-header
			%h1 Forgot your password?
		.row-fluid
			.span12
				= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f|
					.row-fluid
						.span8
							= f.input :email, autofocus: true
						.span4
							= render :partial => "users/shared/links"
					.row-fluid
						.span12
							.form-actions
								= f.button :submit, :value => I18n.t('helpers.submit.user.password.create'), :class => 'btn'
			