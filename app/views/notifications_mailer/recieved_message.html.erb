<style type="text/css">
	.btn:hover{
		background-color: #2F89C5 !important;
	}
</style>

<div style='width: 100%; height: 100%; background-color: #eeeeee; display: inline-block'>
	<div style='margin: 0 auto; margin-top: 100px; text-align: center; padding: 50px; width: 400px; background-color: white; border: 1px solid #dddddd; border-radius: 3px;'>
		<div style='font-family: serif; font-size: 18px; letter-spacing: 0.1em; color: #444444;'>
			<%= @message.body %>
		</div>

		<div style='margin-top: 66px;'>
			<%= link_to "Reply to #{@message.from.name}", "#{root_url}#{@reply_path}", class: 'btn', style: 'padding: 10px 20px; background-color: #3498db; color: white; text-decoration: none; font-size: 13px; letter-spacing: 0.1em; border-radius: 3px; border: 1px solid #2A7AAF; font-family: sans-serif;' %>
		</div>
	</div>
</div>
