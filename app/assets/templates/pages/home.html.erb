<div class="container">
	<div class="row">
		<div class="span12">
			<h1>home page stuff</h1>
			</br>

			Current User -- {{app.currentUser}}

			</br>
			</br>

			<form name='userRegister' class='form-horizontal' ng-submit='app.register()' novalidate>

				<input-wrap label='email' form='userRegister'>
					<input input type='email' class='input-xxlarge' placeholder='email is the shit' model='app.preLogin.email' required></input>
				</input-wrap>

				<bs-input placeholder='username' label='username' model='app.preLogin.username' form='userRegister' required></bs-input>
				<bs-input type='password' placeholder='password' label='password' help-inline='must be 8 - 100 characters long' help-block='longer is better' model='app.preLogin.password' form='userRegister' required></bs-input>
				<div class="control-group">
					<div class="controls">
						<button type='submit' class='btn btn-success'>register</button>
					</div>
				</div>
			</form>
			</br>

			<form name='userLogin' class='form-inline' ng-submit='app.login()' novalidate>
				<bs-input name='login' placeholder='username or email' model='app.preLogin.login' form='userLogin' required></bs-input>
				<bs-input type='password' placeholder='password' model='app.preLogin.password' form='userLogin' required></bs-input>
				<bs-input type='checkbox' placeholder='rememberMe' model='app.preLogin.rememberMe' form='userLogin'></bs-input>
				<div class="control-group">
					<div class="controls">
						<button type='submit' class='btn btn-primary'>login</button>
					</div>
				</div>
			</form>
			</br>

			<form name='userResetPassword' class='form-vertical' ng-submit='app.resetPassword()' novalidate>
				<bs-input type='text' name='login' placeholder='username or email' model='app.preLogin.login' form='userResetPassword' required></bs-input>
				<button type='submit' class='btn btn-inverse'>reset password</button>
			</form>
			</br>
			
			<button class='btn btn-danger' name='psLogout' ng-click='app.logout()'>logout</button>
		</div>
	</div>
</div>
