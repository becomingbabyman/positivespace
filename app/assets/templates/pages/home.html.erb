<div class="container">
	<div class="row">
		<div class="span12">
			<h1>home page stuff {{hello}}</h1>
			{{app.currentUser}}


			</br>
			</br>

			<form name='userRegister' class='form-inline' ng-submit='app.register()'>
				<ps-form-input type='email' placeholder='email' model='app.preLogin.email' required></ps-form-input>
				<ps-form-input type='text' placeholder='username' model='app.preLogin.username' required></ps-form-input>
				<ps-form-input type='password' placeholder='password' model='app.preLogin.password' required></ps-form-input>
				<button type='submit' class='btn'>register</button>
			</form>
			</br>
			</br>

			<form name='userLogin' class='form-inline' ng-submit='app.login()'>
				<ps-form-input type='text' name='login' placeholder='username or email' model='app.preLogin.login' required></ps-form-input>
				<ps-form-input type='password' placeholder='password' model='app.preLogin.password' required></ps-form-input>
				<ps-form-input type='checkbox' placeholder='rememberMe' model='app.preLogin.rememberMe'></ps-form-input>
				<button type='submit' class='btn'>login</button>
			</form>
			</br>
			</br>

			<form name='userResetPassword' class='form-inline' ng-submit='app.resetPassword()'>
				<ps-form-input type='text' name='login' placeholder='username or email' model='app.preLogin.login' required></ps-form-input>
				<button type='submit' class='btn'>send reset password email</button>
			</form>
			</br>
			</br>
			
			<button class='btn' name='psLogout' ng-click='app.logout()'>logout</button>
		</div>
	</div>
</div>
