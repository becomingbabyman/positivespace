<div class="container">
	<div class="row">
		<div class="span12">
			<h1>home page stuff</h1>
			</br>

			Current User -- {{app.currentUser}}

			</br>
			</br>

			<form name='userRegister' class='form-horizontal' ng-submit='app.register()' novalidate>

				
				<input-wrap label='email' form='userRegister'>
					<input type='email' class='input-xxlarge' placeholder='email is the shit' ng-model='app.preLogin.email' required></input>
				</input-wrap>

				<input-wrap label='username' form='userRegister'>
					<input placeholder='username' ng-model='app.preLogin.username' required></input>
				</input-wrap>

				<input-wrap label='password' form='userRegister' help-inline='must be 8 - 100 characters long' help-block='longer is better'>
					<input type='password' placeholder='password' ng-model='app.preLogin.password' required></input>
				</input-wrap>

				<div class="control-group">
					<div class="controls">
						<button type='submit' class='btn btn-success'>register</button>
					</div>
				</div>
			</form>
			</br>

			<form name='userLogin' class='form-inline' ng-submit='app.login()' novalidate>
				<input-wrap form='userLogin'>
					<input name='login' placeholder='username or email' ng-model='app.preLogin.login' required></input>
				</input-wrap>

				<input-wrap form='userLogin'>
					<input type='password' placeholder='password' ng-model='app.preLogin.password' required></input>
				</input-wrap>

				<input-wrap form='userLogin'>
					<input type='checkbox' placeholder='rememberMe' ng-model='app.preLogin.rememberMe'></input>
				</input-wrap>

				<div class="control-group">
					<div class="controls">
						<button type='submit' class='btn btn-primary'>login</button>
					</div>
				</div>
			</form>
			</br>

			<form name='userResetPassword' class='form-vertical' ng-submit='app.resetPassword()' novalidate>
				<input-wrap form='userResetPassword'>
					<input type='text' name='login' placeholder='username or email' ng-model='app.preLogin.login' required></input>
				</input-wrap>

				<button type='submit' class='btn btn-inverse'>reset password</button>
			</form>
			</br>
			
			<button class='btn btn-danger' name='psLogout' ng-click='app.logout()'>logout</button>
		</div>
	</div>
</div>
