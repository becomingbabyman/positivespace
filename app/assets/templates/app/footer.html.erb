<div class="container-fluid opacity-full-hover" ng-class='{opacity0: !app.show.footer, opacity5: app.show.footer}'>
	<div class="row">
		<div class="span12 faded">
			<a href="/purpose" class='muted'>purpose</a>
			&middot;
			<!-- <a href="" class='muted hidden-phone' onclick="_bugHerd.win.bugherd.applicationView.anonymousbar.toggleOptions()">feedback &middot;</a> -->
			<a href="/terms" class='muted'>terms</a>
			&middot;
			<a href="/privacy" class='muted'>privacy</a>
			&middot;
			<a href="/jobs" class='muted'>jobs</a>
			&middot;
			<a href="/contact" class='muted'>contact</a>
			&middot;
			<a href="" class='muted' ng-click="app.openUserVoice()">feedback</a>
			&middot;
			<a href="https://www.facebook.com/positivespaceny" target="_blank" class='muted font14'><i class="icon-facebook"></i></a>
			&middot;
			<a href="https://twitter.com/positivespaceny" target="_blank" class='muted font14'><i class="icon-twitter"></i></a>
			&middot;
			<a href="https://plus.google.com/u/0/113053261118413468238" target="_blank" class='muted font14'><i class="icon-google-plus"></i></a>
			&middot;
