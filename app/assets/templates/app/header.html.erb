<div class="navbar-inner" ng-class='{opacity0: !app.show.header}' ng-show='app.show.header'>
	<div class="container">

		<ul class="nav user-nav pull-right">

			<li ng-controller="SearchsHeaderCtrl" class="hidden-phone primary-search">
				<form class="form-search pts uncenter" name="searchHeaderForm" ng-submit="" novalidate>
					<label for="search_header_query"><i class="icon-search"></i></label>

					<input type="text" name="query" ng-model="query" id='search_header_query' class="input-xlarge search-query opacity5 opacity-full-hover" placeholder="Search" typeahead="user as user.typeahead for user in search($viewValue)" ui-event="{keyup: 'updateScroll($event)'}" autocomplete="off" autofocus>

					<img ng-show="loading" src="<%= asset_path('ajax-loader-black-dots.gif') %>" alt="loading dots" class='loading'>
				</form>
			</li>

			<li class='opacity5 opacity-full-hover' ng-hide='app.loggedIn()'>
				<a href="/login">
					Log in
					<!-- <i class="icon-signin"></i> -->
				</a>
			</li>

			<li ng-show='app.loggedIn()'>
				<a href="/{{app.currentUser.slug}}" title="{{app.currentUser.username | possessive}} space">
					<img ng-src="{{app.currentUser.avatar.big_thumb_url}}" alt='{{app.currentUser.username}}' class='img-circle img-border avatar'>
				</a>
			</li>
			<li ng-show='app.loggedIn()'>
				<a href="/conversations" title='{{app.currentUser.username | possessive}}  conversations'>
					<i class='icon-envelope-alt'></i>
					<div ng-show="app.anyMessages()" class='count'>{{app.currentUser.ready_conversations_count}}</div>
				</a>
			</li>
