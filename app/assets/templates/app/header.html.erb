	<div ng-controller="SearchsHeaderCtrl" class="primary-search container visible-phone">
		<form class="form-search pts" name="searchHeaderForm" ng-submit="" novalidate>
			<div class="row">
				<input type="text" name="query" ng-model="query" id='search_header_query' class="span12 search-query opacity5 opacity-full-hover" placeholder="Search" typeahead="user as user.typeahead for user in search($viewValue)" autocomplete="off" autofocus>

				<img ng-show="loading" src="<%= asset_path('ajax-loader-black-dots.gif') %>" alt="loading dots" style='position: absolute; right: 10px; top: 13px;'>
			</div>
		</form>
	</div>
