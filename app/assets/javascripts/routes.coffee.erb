root = global ? window
angular = root.angular

ps = angular.module("ps", ['ui', 'ui.bootstrap', 'ngCookies', 'psDirectives', 'psServices'])

ps.config(['$routeProvider', '$locationProvider', '$httpProvider', ($routeProvider, $locationProvider, $httpProvider) ->
	# $httpProvider.defaults.headers.common['X-CSRF-Token'] = angular.element(document.getElementById("csrf")).attr("data-csrf")
	#$locationProvider.hashPrefix('');
	$locationProvider.html5Mode true
	$routeProvider.when("/",
		controller: "PagesCtrl"
		templateUrl: "<%= asset_path('pages/home.html') %>"
	).otherwise redirectTo: "/"
])

root.ps = ps

